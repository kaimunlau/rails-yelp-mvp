<h1>New Review for <%= @restaurant.name %></h1>

<div class="w-75 m-auto border rounded shadow p-4 mb-3">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: Review.rating_range %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
</div>

<%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant), class: "btn btn-secondary" %>
